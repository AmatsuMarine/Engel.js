function RTSCameraComponent(){
	this.gameObject;
	var edgeDistance = 20;

	this.update(){
		// don't run if there is no object to run on
		if(this.gameObject){
			var mousePos = input.getMousePos();
			var screenWidth = Engel.canvas.width;
			var screenHeight = Engel.canvas.height;

			if(mousePos[0] <= edgeDistance)
				this.gameObject.getTransform().translate([-1,0,0]);
		}
	}
}
